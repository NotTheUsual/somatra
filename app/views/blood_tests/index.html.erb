<h1>All Blood Tests</h1>
<table class="main-content">
  <thead>
    <tr>
      <th>Date</th>
      <% @headers.each do |header| %>
        <th><%= header %></th>
      <% end %>
      <th></th>
    </tr>
    <tr>
      <th></th>
      <% @units.each do |unit| %>
        <th><%= unit.html_safe %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
  <% @blood_tests.each do |blood_test| %>
    <tr>
      <td><%= link_to Date.parse(blood_test["taken_on"]).strftime("%d %b %Y"), "/blood-tests/#{blood_test['id']}" %></td>
      <% @methods.each do |method| %>
        <td <%= class_for(blood_test, method) %>>
          <%= blood_test[method] %>
        </td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
