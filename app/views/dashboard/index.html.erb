<% if user_signed_in? %>
<script src="http://d3js.org/d3.v3.min.js" charset="utf-8"></script>

<div id="tabs" class="main-content">
  <ul>
  <% @headers.each_with_index do |header, i| %>
    <li><a href="#<%= @methods[i] %>"><%= header %></a></li>
  <% end %>
  </ul>
  <% @methods.each do |method| %>
    <div id="<%= method %>">
      <p><%= render "graphs", blood_name: method, blood_range: @ranges[method] %></p>
    </div>
  <% end %>
</div>

<%= render 'moves' %>
<article class="main-content dangerous-blood">
  <h1>Diary</h1>
  
    <% @dangerous_blood_tests_by_date.each do |result| %>
      <h2><%= result['taken_on'] %></h2>
      I had a <%= link_to "bloodtest", "/blood-tests/#{result['id']}" %> today.<br>
      <% @methods.each do |method| %>
        <%= "My #{method} result (#{result[method]}) is out of range." if result[method] != nil %>
      <% end %></p>
    <% end %>  

</article>
<% else %>
<h1>Welcome to Somatra!</h1>
<h2>To start your new healthy life, please <%= link_to "sign .p", new_user_registration_path %>.</h2>
<% end %>
